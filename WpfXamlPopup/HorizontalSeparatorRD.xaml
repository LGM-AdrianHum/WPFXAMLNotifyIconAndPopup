
<!--
    // Author:   Murray Foxcroft - April 2009
    // Comments: A simple user control that renders a thin separator line
-->
<UserControl x:Class="WpfXamlPopup.HorizontalSeparator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="HorizontalSeparatorLine"
             d:DesignHeight="2"
             mc:Ignorable="d">
    <Grid x:Name="LayoutRoot"
          Width="Auto"
          MinWidth="25">
        <StackPanel>
            <Rectangle Height="1"
                       Margin="2,0,2,0"
                       Stroke="#FF1E1E1E"
                       StrokeThickness="1" />
            <Rectangle Height="1"
                       Margin="2,0,2,0"
                       Stroke="White"
                       StrokeThickness="1" />
        </StackPanel>
    </Grid>
</UserControl>